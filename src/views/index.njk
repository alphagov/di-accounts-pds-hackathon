{% extends "layouts/base.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set pageTitleName = 'Vouching for identity prototype' %}
{% set serviceName = 'GOV.UK account' %}

{% block content %}
<h1 class="govuk-heading-xl">{{ pageTitleName }}</h1>

  <h2 class="govuk-heading-m">Journeys</h2>

  <div>
  {{ govukButton({
      text: "Ask someone to vouch for you",
      href: "/account"
  }) }}
  </div>

  <div>
  {{ govukButton({
      text: "Vouch for someone else",
      href: "/emails/voucher-request?voucheeName=Anne Example"
  }) }}
  </div>


  <h2 class="govuk-heading-m">Pages</h2>
  <h3 class="govuk-heading-s">Account</h2>
  <ul>
    <li><a href="/account" class="govuk-link">GOV.UK Account</a></li>
  </ul>
  <h3 class="govuk-heading-s">Emails</h2>
  <ul>
    <li><a href="/emails/voucher-request" class="govuk-link">Someone wants you to confirm their identity</a></li>
    <li><a href="/emails/you-have-vouched" class="govuk-link">You have confirmed someone's identity</a></li>
    <li><a href="/emails/you-have-been-vouched-for" class="govuk-link">Someone has confirmed your identity</a></li>
  </ul>

  <h3 class="govuk-heading-s">Logout</h2>

  {{ govukButton({
      text: "Clear app session",
      href: "/login/clear-session"
  }) }}

{% endblock %}
